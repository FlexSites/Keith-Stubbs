
<section class="full-bar">
  <div class="grid-full">
    <h1 class="page-header">Recent Updates</h1>

      {{! This is the post loop - each post will be output using this markup }}
    {{#foreach posts}}
    <article class="{{post_class}} grid-half">
      <header class="post-header flush-full">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM D, YYYY"}}</time>
      </header>
      <section class="post-excerpt">
        <p>
          {{excerpt words="26"}}
          <small><a class="read-more" href="{{url}}">Read more...</a></small>
        </p>
      </section>
    </article>
    {{/foreach}}

    {{! Previous/next page links - displayed on every page }}
    <div class="grid-full pagination">{{pagination}}</div>
  </div>
</section>


<style>
    .post {
        display: block;
    }
    .post-excerpt {
        height: 200px;
        display: block;
    }
    .post-title, .post-date {
        float: left;
    }
    .post-title {
        margin-top: 0;
    }
    .post-date {
        text-indent: 1em;
        color: #ccc;
        font-size: 20px;
    }
    .pagination {
        text-align: center;
    }
</style>
