{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<style>
    .post-title {
        font-size: 32px;
    }
    .post-title small {
        font-size: 18px;
    }
    .blog-content {
        max-width: 700px;
        margin: auto;
    }
</style>
<section class="full-bar">
  <div class="grid-full">
        <main class="content blog-content" role="main">
            <article class="{{post_class}}">

                <header class="post-header">
                    <h1 class="post-title">
                        {{title}}
                        <small style="float: right;"><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time> {{tags prefix=" on "}}</small>
                    </h1>
                </header>

                <section class="post-content" style="font-size: 100%">
                    {{#if image}}<img src="{{image}}" style="max-width: 50%; float: right;">{{/if}}
                    {{content}}
                </section>

                <footer class="post-footer">
                    <section class="share">
                        <h4 style="color: #666; margin-bottom: 0;">Share this post</h4>
                        <a class="fa fa-facebook-square" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                            onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                            <span class="hidden">Facebook</span>
                        </a>
                        <a class="fa fa-twitter-square" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
                            onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                            <span class="hidden">Twitter</span>
                        </a>
                        <a class="fa fa-google-plus-square" href="https://plus.google.com/share?url={{url absolute="true"}}"
                           onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                            <span class="hidden">Google+</span>
                        </a>
                    </section>

                </footer>

            </article>
        </main>

</div>

<aside class="read-next blog-content">
    <h5 style="padding: 10px; color: #000; text-align: center; border-bottom: solid #ccc 3px;">Related Posts</h5>
    {{#next_post}}
    <a class="grid-half read-next-story {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
        <section class="post">
            <h2>{{title}}</h2>
            <p>{{excerpt words="19"}}&hellip;</p>
        </section>
    </a>
    {{/next_post}}
    {{#prev_post}}
    <a class="grid-half read-next-story prev {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
        <section class="post">
            <h2>{{title}}</h2>
            <p>{{excerpt words="19"}}&hellip;</p>
        </section>
    </a>
    {{/prev_post}}
</aside>
</section>
{{/post}}
